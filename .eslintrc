{
  "root": true,
  "extends": [
    "airbnb-base/legacy",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": ["jest"],
  "env": {
    "commonjs": true,
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "rules": {
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": [2, "never"],
    "arrow-parens": [2, "as-needed"],
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "never",
      "exports": "never",
      "functions": "ignore"
    }]
  }
}
